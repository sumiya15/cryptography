#include <stdio.h>
#include <string.h>

int main() {
    char text[100], cipher[26];
    printf("Enter plaintext: ");
    gets(text);
    printf("Enter 26-letter key for substitution (A-Z): ");
    gets(cipher);

    for(int i = 0; text[i] != '\0'; i++) {
        char ch = text[i];
        if(ch >= 'A' && ch <= 'Z')
            text[i] = cipher[ch - 'A'];
        else if(ch >= 'a' && ch <= 'z')
            text[i] = cipher[ch - 'a'] + 32; 
    }

    printf("Ciphertext: %s\n", text);
    return 0;
}
